<div class="bg-light m-5 p-5">
    <h3 class="text-danger">Lista de productos</h3>
    {{#if products}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody id="products">
                {{#each products}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{price}}</td>
                    <td><img src="{{image}}" alt="{{name}}" width="100"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <h1>No hay productos</h1>
    {{/if}}
</div>

